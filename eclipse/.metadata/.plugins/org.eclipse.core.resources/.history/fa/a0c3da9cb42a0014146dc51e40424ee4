package oodmod.main;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.init.Blocks;
import net.minecraft.init.Items;
import net.minecraft.item.ItemStack;

public class CraftingClass {
	
	public static void MainClass(){
		addCraftingRecipes();
		addSmeltingRecipes();
	}
	
	public static void addCraftingRecipes(){
		
		//Shaped Recipes
		
		GameRegistry.addRecipe(new ItemStack(MainClass.CompressedBroccoli, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Broccoli});
		GameRegistry.addRecipe(new ItemStack(MainClass.CompressedOnion, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Onion});				GameRegistry.addRecipe(new ItemStack(MainClass.CompressedBeetroot, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Beetroot});
		GameRegistry.addRecipe(new ItemStack(MainClass.CompressedCauliflower, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Cauliflower});
		GameRegistry.addRecipe(new ItemStack(MainClass.CompressedLeek, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Leek});
		GameRegistry.addRecipe(new ItemStack(MainClass.CompressedGarlic, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Garlic});
				
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylBlock, 1), new Object[] {"XXX", "XXX", "XXX", 'X', MainClass.Kroostyl});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylBricks, 8), new Object[] {"YYY", "YXY", "YYY", 'X', MainClass.Kroostyl, 'Y', Blocks.stonebrick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylBricks, 64), new Object[] {"YYY", "YXY", "YYY", 'X', MainClass.KroostylBlock, 'Y', Blocks.stonebrick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylBrickStairs, 4), new Object[] {"  X", " XX", "XXX", 'X', MainClass.KroostylBricks});
				
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylAxe, 1), new Object[] {"XX ", "XY ", " Y ", 'X', MainClass.Kroostyl, 'Y', Items.stick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylPickaxe, 1), new Object[] {"XXX", " Y ", " Y ", 'X', MainClass.Kroostyl, 'Y', Items.stick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylShovel, 1), new Object[] {" X ", " Y ", " Y ", 'X', MainClass.Kroostyl, 'Y', Items.stick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylHoe, 1), new Object[] {"XX ", " Y ", " Y ", 'X', MainClass.Kroostyl, 'Y', Items.stick});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylSword, 1), new Object[] {" X ", " X ", " Y ", 'X', MainClass.Kroostyl, 'Y', Items.stick});
				
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylHelmet, 1), new Object[] {"XXX", "X X", 'X', MainClass.Kroostyl});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylChestplate, 1), new Object[] {"X X", "XXX", "XXX", 'X', MainClass.Kroostyl});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylLeggings, 1), new Object[] {"XXX", "X X", "X X", 'X', MainClass.Kroostyl});
		GameRegistry.addRecipe(new ItemStack(MainClass.KroostylBoots, 1), new Object[] {"X X", "X X", 'X', MainClass.Kroostyl});
				
			
		//Shapeless Recipes
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Broccoli, 9), MainClass.CompressedBroccoli);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.BroccoliSeeds, 1), MainClass.Broccoli);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Onion, 9), MainClass.CompressedOnion);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.OnionSeeds, 1), MainClass.Onion);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Beetroot, 9), MainClass.CompressedBeetroot);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.BeetrootSeeds, 1), MainClass.Beetroot);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Cauliflower, 9), MainClass.CompressedCauliflower);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.CauliflowerSeeds, 1), MainClass.Cauliflower);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Leek, 9), MainClass.CompressedLeek);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.LeekSeeds, 1), MainClass.Leek);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Garlic, 9), MainClass.CompressedGarlic);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.GarlicSeeds, 1), MainClass.Garlic);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.Kroostyl, 9), MainClass.KroostylBlock);

		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.KroostylChiseledBricks, 1), MainClass.KroostylBricks);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.KroostylBricks, 1), MainClass.KroostylChiseledBricks);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.OrangePlanks, 4), MainClass.Log);
				
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.ReinforcedKroostylHelmet, 1), MainClass.KroostylHelmet, Items.nether_star);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.ReinforcedKroostylChestplate, 1), MainClass.KroostylChestplate, Items.nether_star);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.ReinforcedKroostylLeggings, 1), MainClass.KroostylLeggings, Items.nether_star);
		GameRegistry.addShapelessRecipe(new ItemStack(MainClass.ReinforcedKroostylBoots, 1), MainClass.KroostylBoots, Items.nether_star);
				
	}
	
	public static void addSmeltingRecipes(){
		
		GameRegistry.addSmelting(MainClass.Broccoli, new ItemStack(MainClass.BoiledBroccoli, 1), 0.00F);
		GameRegistry.addSmelting(MainClass.KroostylOre, new ItemStack(MainClass.Kroostyl, 1), 2.50F);
		
	}

}